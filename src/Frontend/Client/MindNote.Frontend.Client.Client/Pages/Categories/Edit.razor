@page "/categories/{id:int}/edit"
@attribute [Authorize]
@using MindNote.Frontend.Client.Shared
@using MindNote.Frontend.SDK.API
@using MindNote.Data
@using System.Linq
@inject CustomNotesClient NoteClient
@inject CustomUsersClient UserClient
@inject CustomCategoriesClient CategoryClient
@inject IUriHelper UriHelper

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="categories">Categories</a></li>
    <li class="breadcrumb-item">
        <a href="categories/@Id">@Id</a>
    </li>
    <li class="breadcrumb-item active">Edit</li>
</ul>

@if (Model == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <CategoryEdit Model="@Model" OnSubmit="@OnSubmit" />
}

@code {
    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    [Parameter]
    private int Id { get; set; }

    CategoryEditModel Model { get; set; }

    protected override async Task OnInitAsync()
    {
        var user = (await authenticationStateTask).User;
        Category item = await CategoryClient.Get(Id);
        if (item.UserId != UserHelper.GetId(user)) return;

        Model = new CategoryEditModel(item);
    }

    private async Task OnSubmit()
    {
        var id = await CategoryClient.Update(Id, Model.ToModel());
        UriHelper.NavigateTo($"categories/{id}");
    }
}
