@using MindNote.Frontend.SDK.API.Models

@if (Value != null)
{
    <div style="color:#999">
        <small>
            <ItemTime CreationTime="@Value.CreationTime" ModificationTime="@Value.ModificationTime" />
        </small>
        @if (Value.Category != null)
        {
            <small class="m-1">|</small>
            <small>
                <a href="categories/@Value.Category.Id" style="color: #555;">
                    <CategoryDisplay Value="@Value.Category" />
                </a>
            </small>
        }
        @if (Value.Keywords != null && Value.Keywords.Length > 0)
        {
            <small class="m-1">|</small>
            <small>
                <KeywordsDisplay Value="@Value.Keywords" />
            </small>
        }
        @if (Value.Content != null)
        {
            <small class="m-1">|</small>
            <small>
                <WordCount Value="@Value.Content" />
            </small>
            <small class="m-1">|</small>
            <small>
                <ReadTime Value="@Value.Content" />
            </small>
        }
        @if (Value.User != null)
        {
            <small class="m-1">|</small>
            <small>
                <a href="users/@Value.User.Id" style="color: #555;">
                    <UserDisplay Value="@Value.User" />
                </a>
            </small>
        }
    </div>
}

@code {
    [Parameter]
    private Note Value { get; set; }
}
