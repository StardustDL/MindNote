@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = AccountManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="PostData.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="PostData.Name" class="form-control" />
                <span asp-validation-for="PostData.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Bio</label>
                <textarea asp-for="PostData.Bio" class="form-control" style="height:100px"></textarea>
                <span asp-validation-for="PostData.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Company</label>
                <input asp-for="PostData.Company" class="form-control" />
                <span asp-validation-for="PostData.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input asp-for="PostData.Location" class="form-control" />
                <span asp-validation-for="PostData.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Url</label>
                <input asp-for="PostData.Url" class="form-control" />
                <span asp-validation-for="PostData.Url" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}