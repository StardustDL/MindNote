@model NotesViewModel

<div class="card-subtitle mb-2" style="color:#999">
    <small>
        <item-time creation-time="@Model.Data.CreationTime" modification-time="@Model.Data.ModificationTime"></item-time>
    </small>
    <small class="m-1">|</small>
    <small>
        <a asp-page="/Categories/View" asp-route-id="@Model.Category.Id" style="color: #555;">
            <category-display value="@Model.Category"></category-display>
        </a>
    </small>
    <small class="m-1">|</small>
    <small>
        <word-count text="@Model.Data.Content"></word-count>
    </small>
    <small class="m-1">|</small>
    <small>
        <read-time text="@Model.Data.Content"></read-time>
    </small>
</div>