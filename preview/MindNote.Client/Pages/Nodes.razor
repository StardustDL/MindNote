@page "/nodes"
@inject HttpClient Http
@using MindNote.Client.APIServer

@if (nodes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-hover" style="margin-top:10px">
        <thead>
            <tr>
                <th style="width:6%">
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Content
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in nodes)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Content
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    IList<Node> nodes;

    protected override async Task OnInitAsync()
    {
        NodesClient client = new NodesClient(Http);
        var ms = await client.GetAllAsync();
        nodes = ms.ToList();
    }
}
